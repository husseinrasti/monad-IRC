    "@apollo/client": "^3.11.8",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.7.4",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.12",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
